#!/bin/bash

set -x
set -u
set -e

CLUSTER_NAME=$1
HOSTS_TO_CONFIGURE=$2
PRIVATE_KEY_NAME=$3

function errorTrap {
  status=$?
  echo "ERROR: Command exited with status $status."
}

HOSTS_FILE=`mktemp`
function runAnsibleOnHosts() {
  hosts=$1

  echo "[aws_ecs_cluster]" > $HOSTS_FILE
  for HOST in $hosts
  do
    echo $HOST >> $HOSTS_FILE
  done
}

runAnsibleOnHosts "${HOSTS_TO_CONFIGURE}"

echo "Installing to: $(cat $HOSTS_FILE)"
ansible-playbook --private-key /keys/${PRIVATE_KEY_NAME} -c paramiko -i $HOSTS_FILE /opt/ansible/aws-ecs-playbook.yml --extra-vars "cluster_name=${CLUSTER_NAME}"
